{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": [
            "es2020"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}