{
  "name": "coverage-status",
  "displayName": "Coverage Status",
  "description": "Shows code coverage percentage of the currently open file in the VS Code status bar.",
  "version": "0.0.2",
  "publisher": "Interlaced Pixel",
  "identifier": "interlaced-pixel.coverage-status",
  "author": {"name": "Jared", "email": "jared@interlacedpixel.com"},
  "repository": {
     "icon": "images/icon.png",
     "type": "git",
    "url": "https://github.com/Interlaced-Pixel/coverage-status"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished", "onCommand:coverageStatus.refresh"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coverageStatus.refresh",
        "title": "Coverage Status: Refresh"
      }
    ]
    ,
    "configuration": {
      "type": "object",
      "title": "Coverage Status",
      "properties": {
        "coverageStatus.lcovGlob": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["**/lcov.info", "**/*.lcov"],
          "description": "Glob patterns used to find LCOV files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "package": "vsce package",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "vscode": "^1.1.37",
    "@types/node": "^18.0.0",
    "vsce": "^2.11.0"
  }
}
