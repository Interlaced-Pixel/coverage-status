{
  "name": "code-coverage-status",
  "displayName": "Code Coverage Status",
  "description": "Shows code coverage percentage of the currently open file in the VS Code status bar.",
  "version": "0.0.12",
  "publisher": "InterlacedPixel",
  "author": {
    "name": "Jared",
    "email": "jared@interlacedpixel.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Interlaced-Pixel/coverage-status"
  },
  "icon": "images/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Testing"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/lcov.info",
    "workspaceContains:**/*.lcov"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coverageStatus.refresh",
        "title": "Coverage Status: Refresh"
      },
      {
        "command": "coverageStatus.showFiles",
        "title": "Coverage Status: Show Files"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Coverage Status",
      "properties": {
        "coverageStatus.lcovGlob": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/lcov.info",
            "**/*.lcov"
          ],
          "description": "Glob patterns used to find LCOV files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "vscode": "^1.1.37",
    "@types/node": "^18.0.0",
    "vsce": "^2.11.0"
  },
  "extensionKind": [
    "ui"
  ]
}